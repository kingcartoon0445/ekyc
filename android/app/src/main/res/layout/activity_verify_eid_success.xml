<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient_dark">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        style="@style/Text.Title"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/title_success_verification"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/tv_success" />
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_success">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_national_private_information"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/margin_small"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_5sdp">
                <include
                    android:id="@+id/ll_personal_info"
                    layout="@layout/layout_personal_info"/>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_20sdp"
                android:id="@+id/btn_verify_completed"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/success"
                android:textAllCaps="true"
                android:fontFamily="@font/google_sans_medium"
                android:textStyle="bold"
                android:text="@string/button_title_completed"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>